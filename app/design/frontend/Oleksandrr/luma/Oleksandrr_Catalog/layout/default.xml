<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="page.wrapper">
            <block class="Magento\Cms\Block\Block" name="my_first_block_page_oleksandrr" before="global.notices">
                <arguments>
                    <argument name="block_id" xsi:type="string">first_block_page_oleksandrr</argument>
                </arguments>
            </block>
        </referenceContainer>

        <referenceContainer name="sidebar.additional">
            <block class="Magento\Cms\Block\Block" name="my-sidebar_custom_img" before="gwishlist_sidebar">
                <arguments>
                    <argument name="block_id" xsi:type="string">sidebar_custom_img</argument>
                </arguments>
            </block>
        </referenceContainer>

        <referenceContainer name="footer">
            <block class="Magento\Newsletter\Block\Subscribe"
                   name="form.subscribe"
                   before="-"
                   template="Oleksandrr_Catalog::subscribe.phtml"/>
        </referenceContainer>
    </body>
</page>
