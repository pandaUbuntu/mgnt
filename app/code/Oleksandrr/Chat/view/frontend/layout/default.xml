<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd"
>
    <body>
        <referenceBlock name="before.body.end">
            <container name="oleksandrr.chat">
                <block class="Magento\Framework\View\Element\Template"
                       name="oleksandrr.chat.button"
                       template="Oleksandrr_Chat::open_button.phtml"
                />
                <block class="Magento\Framework\View\Element\Template"
                       name="oleksandrr.chat.sidebar"
                       template="Oleksandrr_Chat::sidebar.phtml">
                    <arguments>
                        <argument name="jsLayout" xsi:type="array">
                            <item name="components" xsi:type="array">
                                <item name="chatSidebar" xsi:type="array">
                                    <item name="component" xsi:type="string">oleksandrr_chat_sidebar</item>
                                    <item name="config" xsi:type="array">
                                        <item name="template" xsi:type="string">Oleksandrr_Chat/sidebar</item>
                                        <item name="actionSaveUrl" xsi:type="url" path="oleksandrr_chat/message/save"/>
                                        <item name="getMessagesUrl" xsi:type="url" path="oleksandrr_chat/message/messages"/>
                                    </item>
                                </item>
                            </item>
                        </argument>
                    </arguments>
                </block>
                <block class="Magento\Framework\View\Element\Template"
                       name="oleksandrr.customTemplate.message"
                       template="Oleksandrr_Chat::message_template.phtml"
                />
            </container>
        </referenceBlock>
        <referenceContainer name="header-wrapper">
            <block class="Magento\Framework\View\Element\Template"
                   name="oleksandrr.chat.mobile.button"
                   before="top.search"
                   template="Oleksandrr_Chat::chat_mobile_button.phtml" />
        </referenceContainer>
    </body>
</page>
